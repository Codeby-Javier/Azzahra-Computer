Options +FollowSymLinks
Options -Indexes
DirectoryIndex index.php

RewriteEngine On
RewriteBase /Azzahra_Website-master/

# Prevent .htaccess file listing
<Files .htaccess>
Order deny,allow
Deny from all
</Files>

# Prevent viewing of .env file
<Files .env>
Order allow,deny
Deny from all
</Files>

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [QSA,L]

<IfModule mod_php5.c>
    php_value short_open_tag 1
</IfModule>

<IfModule mod_php7.c>
    php_value short_open_tag 1
</IfModule>
